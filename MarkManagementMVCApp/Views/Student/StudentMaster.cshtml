<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body>
    <div style="color:white;background-image:url(/images/lh.jpg);background-repeat:no-repeat;background-size:cover">
        <h1 style="text-align:center">SECRET HEART CONVENT HIGH SCHOOL MANGAD</h1>
    </div>
    <div style="width:100%;color:darkblue;font-weight:bold">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid" style="margin-left:390px;width:100%">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav justify-content-center navbar-nav me-auto mb-2 mb-lg-2  ">
                        <li class="nav-item" style="width:150px;color:darkblue">

                            @Html.ActionLink("HOME", "StudentHome", "Student", new { @class = "nav-link active" })
                        </li>
                        
                        <li class="nav-item" style="width:150px">

                            @Html.ActionLink("MARKS", "StudentMark", "Student", new { @class = "nav-link active" })
                        </li>
                        
                        <li class="nav-item" style="width:200px">

                            @Html.ActionLink("CHANGE PASSWORD", "StudentPassword", "Student", new { @class = "nav-link active" })
                        </li>

                        <li class="nav-item">

                            @Html.ActionLink("LOG OUT", "Login", "Faculty", new { @class = "nav-link active" })
                        </li>
                    </ul>

                </div>
            </div>

        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
