@model MarkManagementMVCApp.Models.login
@using MarkManagementMVCApp.Models;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body>
    @using (Html.BeginForm("Login", "Student", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h1 style="color:darkblue; text-align:center;margin-top:20px;">LOGIN</h1>

        <hr />
        <div class="container-fluid">

            <div class="col-md-4" style="margin-left:450px;color:darkblue">
                <img src="~/images/loginhead.jpg" height="200px" width="100%" />
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <b>USER NAME</b>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <b>PASSWORD</b>
                        <div class="col-md-12">
                            @Html.PasswordFor(model => model.password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <b>USER TYPE</b>
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.usertype, new SelectList(Enum.GetValues(typeof(utype))),
                                                    "Select", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.usertype, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-12 col-md-10">
                            <p style="color: red; margin-left: 120px">@ViewBag.info</p>
                            <input type="submit" value="Login" class="btn btn-primary" style="width:200px;margin-left:120px" />
                        </div>
                    </div>
                </div>
            </div>

        </div>

    }
</body>
</html>
